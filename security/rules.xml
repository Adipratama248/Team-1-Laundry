<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!-- 1. RULE UNTUK OPERATOR: Hanya melihat job miliknya -->
    <record id="rule_laundry_order_operator_personal" model="ir.rule">
        <field name="name">Laundry Order: Personal Orders Only</field>
        <field name="model_id" ref="model_laundry_order"/>
        <field name="domain_force">[('operator_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_laundry_operator'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- 2. RULE UNTUK ADMIN & KASIR: Melihat SEMUA job -->
    <record id="rule_laundry_order_manager_all" model="ir.rule">
        <field name="name">Laundry Order: Manager See All</field>
        <field name="model_id" ref="model_laundry_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(6, 0, [ref('group_laundry_manager'), ref('group_laundry_cashier')])]"/>
    </record>

     <!-- 3. RULE UNTUK OPERATOR: Hanya melihat QC miliknya -->
    <record id="rule_laundry_qc_operator_personal" model="ir.rule">
        <field name="name">Laundry QC: Personal Orders Only</field>
        <field name="model_id" ref="model_laundry_qc"/>
        <field name="domain_force">[('laundry_order_id.operator_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_laundry_operator'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- 4. RULE UNTUK ADMIN & KASIR: Melihat SEMUA QC -->
    <record id="rule_laundry_qc_manager_all" model="ir.rule">
        <field name="name">Laundry QC: Manager See All</field>
        <field name="model_id" ref="model_laundry_qc"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(6, 0, [ref('group_laundry_manager'), ref('group_laundry_cashier')])]"/>
    </record>

    </data>
</odoo>