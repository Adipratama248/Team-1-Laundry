<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Laundry Order Report -->
    <record id="action_laundry_order_report" model="ir.actions.report">
        <field name="name">Laundry Order Report</field>
        <field name="model">laundry.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Team-1-Laundry.laundry_order_report_template</field>
        <field name="report_file">Team-1-Laundry.laundry_order_report_template</field>
        <field name="print_report_name">'Laundry Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_laundry_order"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Template -->
    <template id="laundry_order_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Laundry Order Report</h2>
                        <div class="row">
                            <div class="col-6">
                                <strong>Order Number:</strong> <t t-esc="doc.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Date Received:</strong> <t t-esc="doc.date_received"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <strong>Customer:</strong> <t t-esc="doc.partner_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Status:</strong> <t t-esc="doc.state"/>
                            </div>
                        </div>
                        <br/>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td><t t-esc="line.product_id.name"/></td>
                                        <td><t t-esc="line.quantity"/></td>
                                        <td><t t-esc="line.price_unit"/></td>
                                        <td><t t-esc="line.subtotal"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-12 text-right">
                                <strong>Total: <t t-esc="doc.total_amount"/></strong>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>