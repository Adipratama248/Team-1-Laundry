<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_kartu_peserta">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">
                        <div class="page" style="position: absolute; top: 0; left: 0; width: 105mm; height: 64mm; background-image: url('/kursus/static/src/img/bg_card.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
                            <div class="p-4">
                                <div class="row">
                                    <div class="col-12">
                                        <div>
                                            <div class="row" style="border-bottom: 2px solid #81b7d6;">
                                                <div class="col-6">
                                                    <div>
                                                        <h5 style="color: #2c3e50; font-weight: bold; font-size: 12px; margin-bottom: 0;">KARTU PESERTA</h5>
                                                        <h6 t-field="doc.pendaftar_id.no_peserta" class="mb-1 mt-1" style="color: #7f8c8d; font-size: 10px; margin-bottom: 0;"/>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <t t-if="doc.env.company.logo">
                                                        <img t-att-src="image_data_uri(doc.env.company.logo)" style="max-height: 40px; float: right;"/></t>
                                                    <t t-if="doc.env.company.street2">, <span t-field="doc.env.company.street2"></span></t>
                                                    <!-- <br/>
                                                    Phone: <span t-field="doc.env.company.phone"></span> 
                                                    <br/>
                                                    Email: <span t-field="doc.env.company.email"></span> -->
                                                </div>
                                                <!-- <div class="col-6">
                                                    <img t-if="doc.env.company.logo" t-att-src="image_data_uri(doc.env.company.logo)" style="max-height: 40px;" alt="Logo"></img>
                                                    <div class="col-6 text-end">
                                                        <h5 t-field="doc.env.company.name" class="m-0"></h5>
                                                        <div class="small text-muted">
                                                            <span t-field="doc.env.company.street"></span>
                                                            <t t-if="doc.env.company.street2">, <span t-field="doc.env.company.street2"></span></t>
                                                            <br/>
                                                            Phone: <span t-field="doc.env.company.phone"></span> 
                                                            <br/>
                                                            Email: <span t-field="doc.env.company.email"></span>
                                                        </div>
                                                    </div>
                                                </div> -->
                                            </div>

                                            <div class="row">
                                                <div class="col-9 mt-2">
                                                    <table class="table table-sm table-borderless">
                                                        <tr>
                                                            <td style="font-size: 8px;">
                                                                <strong>Nama</strong>
                                                            </td>
                                                            <td style="font-size: 8px;">
                                                                :
                                                                <span t-field="doc.pendaftar_id.name"/>
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <td style="font-size: 8px;">
                                                                <strong>Alamat</strong>
                                                            </td>
                                                            <td style="font-size: 8px;">
                                                                :
                                                                <span t-field="doc.pendaftar_id.street"/>
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <td style="font-size: 8px;">
                                                                <strong>No. HP</strong>
                                                            </td>
                                                            <td style="font-size: 8px;">
                                                                :
                                                                <span t-field="doc.no_hp"/>
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <td style="font-size: 8px;">
                                                                <strong>Jenis Kelamin</strong>
                                                            </td>
                                                            <td style="font-size: 8px;">
                                                                :
                                                                <span t-field="doc.pendaftar_id.jenis_kelamin"/>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>

                                                <!-- Photo -->
                                                <div class="col text-end mt-2">
                                                    <img t-if="doc.pendaftar_id.image_1920" t-att-src="image_data_uri(doc.pendaftar_id.image_1920)" style="max-height: 100px; max-width: 100%;"/>
                                                    <img t-else="" src="url('https://placehold.co/600x400')" style="max-height: 100px; max-width: 100%;"/>
                                                </div>
                                            </div>

                                            <!-- end row -->
                                            <!-- Footer -->
                                            <!-- <div class="text-center" style="font-size: 8px; color: #666; position: absolute; bottom: 2mm; left: 0; width: 100%;">
                                                <p>Kartu ini adalah bukti keanggotaan peserta kursus.</p>
                                            </div> -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>