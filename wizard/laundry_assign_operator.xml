<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_laundry_assign_operator_form" model="ir.ui.view">
        <field name="name">laundry.assign.operator.form</field>
        <field name="model">laundry.assign.operator</field>
        <field name="arch" type="xml">
            <form string="Tugaskan Operator">
                <group>
                    <div class="alert alert-info" role="alert">
                        Order sudah diterima. Siapa yang akan mengerjakannya?
                    </div>
                    <field name="order_id" invisible="1"/>
                    <field name="employee_id" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Assign Operator" type="object" class="btn-primary"/>
                    <button string="Tutup" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>