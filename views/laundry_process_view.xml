<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- list VIEW -->
    <record id="view_laundry_process_list" model="ir.ui.view">
        <field name="name">laundry.process.log.list</field>
        <field name="model">laundry.process.log</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="laundry_order_id"/>
                <field name="process_type"/>
                <field name="employee_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="duration"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_laundry_process_log_form" model="ir.ui.view">
        <field name="name">laundry.process.log.form</field>
        <field name="model">laundry.process.log</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Laundry Process Log">
                <sheet>
                    <group>
                        <field name="laundry_order_id"/>
                        <field name="process_type"/>
                        <field name="employee_id"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="duration"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="laundry_action_laundry_process_log" model="ir.actions.act_window">
        <field name="name">Laundry Process Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">laundry.process.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- WIZARD VIEW -->
    <record id="view_laundry_process_wizard_form" model="ir.ui.view">
        <field name="name">laundry.process.wizard.form</field>
        <field name="model">laundry.process.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Start Process">
                <group>
                    <field name="laundry_order_id" readonly="1"/>
                    <field name="process_type" readonly="1"/>
                    <field name="employee_id"/>
                    <field name="start_time"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button name="action_start_process" string="Start" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- WIZARD ACTION -->
    <record id="action_laundry_process_wizard" model="ir.actions.act_window">
        <field name="name">Start Process</field>
        <field name="res_model">laundry.process.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_laundry_process_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{'active_id': active_id}</field>
    </record>

</odoo>