<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list View for Pelanggan -->
    <record id="view_pelanggan_list" model="ir.ui.view">
        <field name="name">cdn.pelanggan.list</field>
        <field name="model">cdn.pelanggan</field>
        <field name="arch" type="xml">
            <list string="Pelanggan">
                <field name="no_pelanggan"/>
                <field name="name"/>
                <field name="street" string="Alamat"/>
                <field name="jenis_kelamin" />
                <field name="mobile" string="No HP"/>
            </list>
        </field>
    </record>

    <!-- Form View for Pelanggan -->
    <record id="view_pelanggan_form" model="ir.ui.view">
        <field name="name">cdn.pelanggan.form</field>
        <field name="model">cdn.pelanggan</field>
        <field name="arch" type="xml">
            <form string="Pelanggan">
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <label for="no_pelanggan" string="No Pelanggan"/>
                        </h3>
                        <h1>
                            <field name="no_pelanggan"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="mobile" string="No HP"/>
                        <field name="jenis_kelamin"/>
                    </group>
                    <group>
                        <field name="street" string="Alamat"/> 
                        <field name="provinsi_id" domain="[('kode', '=', '35')]"/>
                        <field name="kota_id" domain="[('provinsi_id','=',provinsi_id), ('kode', 'in', ['3507', '3573'])]"/>
                        <field name="kecamatan_id" domain="[('kota_id','=',kota_id)]"/>
                        <field name="desa_id" domain="[('kecamatan_id','=',kecamatan_id)]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Pelanggan -->
    <record id="action_pelanggan" model="ir.actions.act_window">
        <field name="name">Pelanggan</field>
        <field name="res_model">cdn.pelanggan</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item for Pelanggan -->
    <menuitem id="menu_pelanggan" name="Pelanggan" action="action_pelanggan" parent="laundry_menu_root"/>

</odoo>