<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_form_laundry" model="ir.ui.view">
        <field name="name">sale.order.form.laundry</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- ORDER LINE -->
            <xpath expr="//field[@name='order_line']/list" position="replace">
                <list editable="bottom">
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal" readonly="1"/>
                </list>
            </xpath>

            <!-- LAUNDRY ORDER BUTTON -->
            <xpath expr="//header" position="inside">
                <button name="action_open_laundry"
                        string="Open Laundry Order"
                        type="object"
                        invisible="not laundry_order_id"/>
            </xpath>

        </field>
    </record>

</odoo>