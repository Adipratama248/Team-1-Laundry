<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_laundry_order_list" model="ir.ui.view">
        <field name="name">laundry.order.list</field>
        <field name="model">laundry.order</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-success="state == 'delivered'" decoration-warning="state == 'qc'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="operator_id" widget="many2one_avatar_employee"/>
                <field name="date_received"/>
                <field name="date_estimated" widget="remaining_days"/>
                <field name="weight_kg" optional="hide"/>
                <field name="qty_pcs" optional="hide"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="state" widget="badge" decoration-success="state == 'delivered'" decoration-warning="state in ('washing','drying','ironing')"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_laundry_order_form" model="ir.ui.view">
        <field name="name">laundry.order.form</field>
        <field name="model">laundry.order</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Laundry Order">
                <header>
                    <button name="action_confirm" string="Confirm Order" type="object" class="oe_highlight" invisible="not id or state != 'draft'" groups="laundry.group_laundry_admin,laundry.group_laundry_cashier"/> <!-- Draft -> Received + Wizard -->
                    <button name="action_next_stage" string="Start Job" type="object" class="oe_highlight" invisible="state != 'received'" groups="laundry.group_laundry_operator"/> <!-- Received -> Washing/Ironing -->
                    <button name="action_next_stage" string="Next Step" type="object" class="oe_highlight" invisible="state not in ('washing', 'drying', 'ironing')" groups="laundry.group_laundry_operator"/> <!-- Washing/Drying/Ironing -> Next -->
                    <button name="action_open_qc" string="Input Hasil QC" type="object" class="btn-secondary" invisible="state != 'qc'" groups="laundry.group_laundry_operator"/>  <!-- QC -> Ready -->
                    <button name="action_next_stage" string="QC Passed / Finish" type="object" class="oe_highlight" invisible="state != 'qc'" groups="laundry.group_laundry_operator"/>
                    <button name="action_next_stage" string="Delivered" type="object" class="btn-success" invisible="state != 'ready'" groups="laundry.group_laundry_operator"/> <!-- Ready -> Delivered -->
                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'draft'" groups="laundry.group_laundry_admin,laundry.group_laundry_cashier"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancel'" groups="laundry.group_laundry_admin,laundry.group_laundry_cashier"/>

                    <!-- Invoice & Tag -->
                    <button name="action_generate_invoice" string="Create Invoice" type="object" class="btn-secondary" invisible="invoice_id or state in ('draft', 'cancel')" groups="laundry.group_laundry_admin,laundry.group_laundry_cashier"/>
                    <button name="action_register_payment" string="Bayar" type="object" class="btn-primary" groups="laundry.group_laundry_cashier,laundry.group_laundry_admin" invisible="not invoice_id or state in ('draft', 'cancel') or status_pembayaran == 'paid'"/>
                    <button name="action_print_laundry_tag" string="Print Tag" type="object" class="btn-secondary" invisible="state == 'draft' or state == 'cancel'"/>

                    <!-- STATUSBAR -->
                    <field name="workflow_type" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,washing,drying,ironing,qc,ready,delivered" invisible="workflow_type != 'full'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,washing,drying,qc,ready,delivered" invisible="workflow_type != 'wash'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,ironing,qc,ready,delivered" invisible="workflow_type != 'iron'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_id" readonly="state != 'draft'" widget="res_partner_many2one_context"/>
                            <field name="operator_id" options="{'no_create': True, 'no_open': True}" readonly="state not in ('draft', 'received')"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="total_estimated_hours" widget="float_time" force_save="1"/>
                            <field name="invoice_id" invisible="1"/>
                        </group>

                        <group>
                            <field name="date_received"/>
                            <field name="date_estimated" force_save="1"/>
                            <field name="date_finished" readonly="1"/>
                            <field name="status_pembayaran" widget="badge"
                                   decoration-info="status_pembayaran == 'draft'"
                                   decoration-danger="status_pembayaran == 'not_paid'"
                                   decoration-warning="status_pembayaran in ('partial', 'in_payment')"
                                   decoration-success="status_pembayaran in ('paid', 'reversed')" />
                        </group>
                    </group>

                    <notebook>
                        <!-- TAB 1: LAYANAN UTAMA -->
                        <page string="Layanan Laundry">
                            <field name="line_laundry_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('is_laundry_service', '=', True)]"/>
                                    <field name="laundry_service_type" optional="show"/> 
                                    <field name="quantity"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <!-- TAB 2: PRODUK TAMBAHAN -->
                        <page string="Produk Tambahan">
                            <field name="line_additional_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('is_laundry_service', '=', False)]"/>
                                    <field name="quantity"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>

                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_laundry_order_search" model="ir.ui.view">
        <field name="name">laundry.order.search</field>
        <field name="model">laundry.order</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="operator_id"/>
                <filter name="filter_today" string="Today"
                        domain="[('date_received','>=',context_today())]"/>
                <filter name="filter_not_finished" string="Not Finished"
                        domain="[('state','not in',('delivered','cancel'))]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="groupby_partner" string="Customer" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter name="groupby_operator" string="Operator" domain="[]" context="{'group_by':'operator_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="laundry_action_laundry_order" model="ir.actions.act_window">
        <field name="name">Laundry Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">laundry.order</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Buat pesanan laundry baru
          </p>
        </field>
    </record>

</odoo>