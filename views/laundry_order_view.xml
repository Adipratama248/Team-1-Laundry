<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_laundry_order_list" model="ir.ui.view">
        <field name="name">laundry.order.list</field>
        <field name="model">laundry.order</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <!-- <list decoration-muted="state == 'draft'" decoration-success="state == 'delivered'" decoration-info="state == 'ready'"> -->
            <list decoration-bf="state == 'ready'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="operator_id" widget="many2one_avatar_employee"/>
                <field name="date_received"/>
                <field name="date_estimated" widget="remaining_days"/>
                <field name="weight_kg" optional="hide"/>
                <field name="qty_pcs" optional="hide"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="state" widget="badge" decoration-success="state == 'delivered'" decoration-muted="state in ('washing','drying','ironing','qc')" decoration-info="state == 'ready'"/>
                <field name="delivery_alert" widget="badge" decoration-success="delivery_alert == '✅ SIAP DIAMBIL (LUNAS)'" decoration-danger="delivery_alert == '⚠️ SIAP - BELUM LUNAS'" decoration-bf="1" optional="show"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_laundry_order_form" model="ir.ui.view">
        <field name="name">laundry.order.form</field>
        <field name="model">laundry.order</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Laundry Order">
                <header>
                    <!-- ================================================================= -->
                    <!-- ZONE: ADMIN & KASIR -->
                    <!-- ================================================================= -->

                    <!-- 1. CONFIRM ORDER (Draft -> Received) -->
                    <button name="action_confirm" string="Confirm Order" type="object" class="oe_highlight" invisible="not id or state != 'draft' or hide_manager_buttons" groups="laundry.group_laundry_cashier,laundry.group_laundry_manager"/>

                    <!-- 2. DELIVER (Ready -> Delivered) -->
                    <!-- Di sini validasi pembayaran akan berjalan -->
                    <button name="action_next_stage" string="Deliver" type="object" class="btn-success" invisible="state != 'ready' or hide_manager_buttons" groups="laundry.group_laundry_cashier,laundry.group_laundry_manager"/>

                    <!-- 3. INVOICING & PAYMENT -->
                    <button name="action_generate_invoice" string="Create Invoice" type="object" class="btn-secondary" invisible="invoice_id or state in ('draft', 'cancel') or hide_manager_buttons" groups="laundry.group_laundry_manager,laundry.group_laundry_cashier"/>
                    <button name="action_register_payment" string="Pay" type="object" class="btn-primary" invisible="not invoice_id or state in ('draft', 'cancel') or status_pembayaran == 'paid' or hide_manager_buttons" groups="laundry.group_laundry_cashier,laundry.group_laundry_manager"/>

                    <!-- ================================================================= -->
                    <!-- ZONE: OPERATOR -->
                    <!-- ================================================================= -->

                    <!-- 4. START JOB (Received -> Washing) -->
                    <!-- Operator klik ini saat mau kerja, Waktu mulai dihitung -->
                    <button name="action_next_stage" string="Start Job" type="object" class="oe_highlight" invisible="state != 'received' or hide_operator_buttons" groups="laundry.group_laundry_operator"/>

                    <!-- 5. NEXT STAGE (Washing -> Drying -> Ironing) -->
                    <button name="action_next_stage" string="Next Stage" type="object" class="oe_highlight" invisible="state not in ('washing', 'drying', 'ironing') or hide_operator_buttons" groups="laundry.group_laundry_operator"/>

                    <!-- 6. QC PROCESS (QC -> Ready) - SEKARANG OLEH OPERATOR -->
                    <button name="action_open_qc" string="Quality Check" type="object" class="oe_highlight" invisible="state != 'qc' or hide_operator_buttons" groups="laundry.group_laundry_operator"/>

                    <!-- ================================================================= -->
                    <!-- ZONE: SHARED / ALL -->
                    <!-- ================================================================= -->

                    <!-- Cancel & Draft (Bisa dibatasi ke Admin jika perlu) -->
                    <!-- <button name="action_cancel" string="Cancel" type="object" invisible="not id or state in ('delivered', 'cancel')"/> -->
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancel'"/>

                    <!-- STATUS BAR -->
                    <field name="workflow_type" invisible="1"/>
                    <field name="hide_operator_buttons" invisible="1"/>
                    <field name="hide_manager_buttons" invisible="1"/>
                    <field name="state_statusbar" widget="statusbar" statusbar_visible="draft,received,washing,drying,ironing,qc,ready" invisible="workflow_type != 'full'"/>
                    <field name="state_statusbar" widget="statusbar" statusbar_visible="draft,received,washing,drying,qc,ready" invisible="workflow_type != 'wash'"/>
                    <field name="state_statusbar" widget="statusbar" statusbar_visible="draft,received,ironing,qc,ready" invisible="workflow_type != 'iron'"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" bg_color="bg-success" text="Delivered" invisible="state != 'delivered'" />
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_id" readonly="state != 'draft'" widget="res_partner_many2one_context"/>
                            <field name="operator_id" options="{'no_create': True, 'no_open': True}" readonly="state not in ('draft', 'received')"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="total_estimated_hours" widget="float_time" force_save="1"/>
                            <field name="invoice_id" invisible="1"/>
                        </group>

                        <group>
                            <field name="date_received"/>
                            <field name="date_estimated" force_save="1"/>
                            <field name="date_finished" readonly="1"/>
                            <field name="status_pembayaran" widget="badge" decoration-info="status_pembayaran == 'draft'" decoration-danger="status_pembayaran == 'not_paid'" decoration-warning="status_pembayaran in ('partial', 'in_payment')" decoration-success="status_pembayaran in ('paid', 'reversed')" />
                        </group>
                    </group>

                    <notebook>
                        <!-- TAB 1: LAYANAN UTAMA -->
                        <page string="Layanan Laundry">
                            <field name="line_laundry_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('is_laundry_service', '=', True)]"/>
                                    <field name="laundry_service_type" optional="show"/>
                                    <field name="note_in" placeholder="Contoh: Kancing lepas, Noda tinta..."/>
                                    <!-- <field name="note_out" optional="hide" readonly="state != 'qc'"/> -->
                                    <field name="quantity"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                    <button name="action_open_condition_in" icon="fa-info-circle" type="object" class="btn-link" invisible="order_state not in ('draft', 'received')" groups="laundry.group_laundry_cashier, laundry.group_laundry_manager"/>
                                </list>
                            </field>
                        </page>

                        <!-- TAB 2: PRODUK TAMBAHAN -->
                        <page string="Produk Tambahan">
                            <field name="line_additional_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('is_laundry_service', '=', False)]"/>
                                    <field name="quantity"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>

                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_laundry_order_search" model="ir.ui.view">
        <field name="name">laundry.order.search</field>
        <field name="model">laundry.order</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="operator_id"/>
                <filter name="filter_today" string="Today" domain="[('date_received','>=',context_today())]"/>
                <filter name="filter_not_finished" string="Not Finished" domain="[('state','not in',('delivered','cancel'))]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="groupby_partner" string="Customer" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter name="groupby_operator" string="Operator" domain="[]" context="{'group_by':'operator_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="laundry_action_laundry_order" model="ir.actions.act_window">
        <field name="name">Laundry Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">laundry.order</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Buat pesanan laundry baru
            </p>
        </field>
    </record>

</odoo>