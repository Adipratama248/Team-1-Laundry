<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- list VIEW -->
    <record id="view_laundry_order_list" model="ir.ui.view">
        <field name="name">laundry.order.list</field>
        <field name="model">laundry.order</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_received"/>
                <field name="date_estimated"/>
                <field name="weight_kg"/>
                <field name="qty_pcs"/>
                <field name="state"/>
                <field name="total_amount"/>
            </list>
        </field>
    </record>

    <record id="view_laundry_order_form" model="ir.ui.view">
        <field name="name">laundry.order.form</field>
        <field name="model">laundry.order</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Laundry Order">
                <header>
                    <!-- 1. TOMBOL UTAMA FLOW (DINAMIS) -->
                    <!-- Tombol ini akan memanggil fungsi action_next_stage di Python
                        yang secara cerdas melompati status yang tidak perlu (misal: skip washing jika cuma setrika) -->
                    <button name="action_next_stage" string="Proses Selanjutnya" type="object" class="oe_highlight" invisible="state in ('delivered', 'cancel', 'qc')"/>

                    <!-- 2. TOMBOL KHUSUS QC -->
                    <!-- Muncul hanya saat status QC. 
                        - Tombol 'Input Hasil QC' untuk mengisi detail QC.
                        - Tombol 'QC Passed / Selesai' (Next Stage) untuk lanjut ke Ready -->
                    <button name="action_open_qc" string="Input Hasil QC" type="object" class="btn-secondary" invisible="state != 'qc'"/>
                    <button name="action_next_stage" string="QC Passed / Selesai" type="object" class="oe_highlight" invisible="state != 'qc'"/>

                    <!-- 3. TOMBOL STANDARD LAINNYA -->
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ('delivered', 'cancel')"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancel'"/>

                    <!-- Status Bar -->
                   <field name="workflow_type" invisible="1"/>

                    <!-- SCENARIO 1: FULL SERVICE (CKS) -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,washing,drying,ironing,qc,ready,delivered" invisible="workflow_type != 'full'"/>

                    <!-- SCENARIO 2: CUCI KERING (CK / Carpet) -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,washing,drying,qc,ready,delivered" invisible="workflow_type != 'wash'"/>

                    <!-- SCENARIO 3: SETRIKA SAJA (Ironing) -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,ironing,qc,ready,delivered" invisible="workflow_type != 'iron'"/>
                </header>
                <sheet>
                    <!-- Smart Button Area (Optional: Jika ingin melihat Invoice yang terbentuk) -->
                    <!-- <div class="oe_button_box" name="button_box"></div> -->

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <!-- Menampilkan total estimasi waktu hasil compute -->
                            <field name="total_estimated_hours" widget="float_time"/>
                        </group>

                        <group>
                            <field name="date_received"/>
                            <field name="date_estimated"/>
                            <field name="date_finished" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- TAB 1: LAYANAN UTAMA -->
                        <page string="Layanan Laundry">
                            <field name="line_laundry_ids">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('is_laundry_service', '=', True)]"/>
                                    <field name="laundry_service_type" optional="show"/> 
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <!-- TAB 2: PRODUK TAMBAHAN -->
                        <page string="Produk Tambahan">
                            <field name="line_additional_ids">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('is_laundry_service', '=', False)]"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>

                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
                
                <!-- Chatter untuk Log History (Tracking=True) -->
                <chatter />
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_laundry_order_search" model="ir.ui.view">
        <field name="name">laundry.order.search</field>
        <field name="model">laundry.order</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <filter name="filter_today" string="Today"
                        domain="[('date_received','>=',context_today())]"/>
                <filter name="filter_not_finished" string="Not Finished"
                        domain="[('state','not in',('delivered','cancel'))]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="groupby_partner" string="Customer" domain="[]" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="laundry_action_laundry_order" model="ir.actions.act_window">
        <field name="name">Laundry Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">laundry.order</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>