<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list View for Layanan -->
    <record id="view_layanan_list" model="ir.ui.view">
        <field name="name">cdn.layanan.list</field>
        <field name="model">cdn.layanan</field>
        <field name="arch" type="xml">
            <list string="Layanan">
                <field name="nama_layanan"/>
                <field name="kategori_layanan"/>
                <field name="satuan"/>
                <field name="harga_jual"/>
                <field name="estimasi_hari"/>
                <field name="estimasi_jam"/>
                <field name="tipe_layanan"/>
                <field name="pajak"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View for Layanan -->
    <record id="view_layanan_form" model="ir.ui.view">
        <field name="name">cdn.layanan.form</field>
        <field name="model">cdn.layanan</field>
        <field name="arch" type="xml">
            <form string="Layanan">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="nama_layanan"/>
                        </h1>
                    </div>
                    <group>
                        <field name="kategori_layanan"/>
                        <field name="satuan"/>
                    </group>
                    <group>
                        <field name="harga_jual"/>
                        <field name="pajak"/>
                    </group>
                    <group>
                        <field name="estimasi_hari"/>
                        <field name="estimasi_jam"/>
                        <field name="tipe_layanan"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Layanan -->
    <record id="action_layanan" model="ir.actions.act_window">
        <field name="name">Layanan</field>
        <field name="res_model">cdn.layanan</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item for Layanan -->
    <menuitem id="menu_layanan" name="Layanan" action="action_layanan" parent="laundry_menu_root"/>

</odoo>